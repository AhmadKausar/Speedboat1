<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kausar.speedboat.AndroidDynamic">


    <TextView
        android:id="@+id/keberangkatanid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tujuanid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:visibility="invisible"
        android:layout_toRightOf="@id/keberangkatanid"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:text="Departure:"
        android:textSize="7pt" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/departure"
        android:paddingTop="8dp"
        android:prompt="@string/hint_depature"
        android:spinnerMode="dialog" />


    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/spinner"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:text="Destination:"
        android:textSize="7pt" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination"
        android:paddingTop="8dp"
        android:prompt="@string/hint_destination"
        android:spinnerMode="dialog" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/spinner2"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:text="Departure Date:"
        android:textSize="7pt" />


    <EditText
        android:id="@+id/txtDateEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:hint="Date-Month-Year"
        android:paddingTop="30dp" />

    <Button
        android:id="@+id/Search"
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDateEntered"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
